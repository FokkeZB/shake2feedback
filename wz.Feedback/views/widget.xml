<Alloy>
	<Window id="win">
		<LeftNavButton platform="ios">
			<Button id="done" onClick="closeWin" />
		</LeftNavButton>
		<RightNavButton platform="ios">
			<Button id="send" onClick="onSendFeedback" />
		</RightNavButton>
		
		<ImageView id='screenshot'>
			<Module id="paint" module="ti.paint" method="createPaintView"
			eraseMode="false" strokeWidth="5.0" strokeColor="blue" strokeAlpha="255" />
		</ImageView>
		<TextArea id='comment' onFocus="focusComment"></TextArea>
		<Button id="sendButton" onClick="onSendFeedback"></Button>
	</Window>
</Alloy>